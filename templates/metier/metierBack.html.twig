{% extends 'base.html.twig' %}

{% block title %}Gestionnaire des métiers
{% endblock %}

{% block body %}

	<main id="main" class="main">

		<div class="pagetitle">
			<h1>Gestionnaire des métiers
			</h1>
			<nav>
				<ol class="breadcrumb">
					<li class="breadcrumb-item">
						<a href="/admin">Home</a>
					</li>
					<li class="breadcrumb-item">
						<a href="/metiers">Metiers</a>
					</li>
				</ol>
			</nav>
		</div>
		<!-- End Page Title -->

		<section class="section">
			<div class="row">
				<div class="col-lg-12">

					<div class="card">
						<div class="card-body" style="background-color:#0e1641">

							<h5 class="card-title" style="color:#DEE9F3">
								<strong>Liste des métiers AGM
								</strong>
							</h5>

							<table class="table" style="color:#DEE9F3">
								<thead>
									<tr>
										<th scope="col">id</th>
										<th scope="col">titre</th>
										<th scope="col">Description</th>
										<th scope="col">Image</th>
										<th scope="col"></th>
									</tr>
								</thead>
								<tbody>
									<tr>
										{% if listM | length == 0 %}
											<p style="text-align: center">Liste vide</p>
										{% endif %}
									</tr>
									{% for m in listM  %}
										<tr>
											<td>{{m.id}}</td>
											<td>{{m.titre}}</td>
											<td>{{m.description }}</td>
											<td>{{m.image}}</td>

											<td><img style="width: 75px; height: 55px; padding: 5px;" src="{{ asset('uploads/'~m.image) }}"/></td>
											<td>
												<a href="{{ path('modifierMetier',{id:m.id}) }}">
													<button type="button" class="btn btn-outline-warning">
														<i class="bi bi-pen" style="color:#DEE9F3"></i>
													</button>
												</a>

												<a href="{{ path('suppressionMetier',{id:m.id}) }}">
													<button type="button" class="btn btn-outline-warning">
														<i class="bi bi-trash" style="color:#DEE9F3"></i>
													</button>
												</a>
											</td>


										</tr>

									{% endfor %}


								</tbody>

							</table>
							<a href="{{ path('ajouterMetier') }}">
								<button type="button" class="btn btn-warning" style=" background-color:#ff9919 ">ajouter un métier
								</button>
							</a>
						</div>
					</div>


				</div>


			</div>
		</section>

	</main>

{% endblock %}
