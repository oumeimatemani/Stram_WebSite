{% extends 'base.html.twig' %}

{% block title %}Modifier Metier{% endblock %}

{% block body %}
<main id="main" class="main">
    <div class="pagetitle">
        <h1>Formulaire de modification de Metier</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/">Home</a>
                </li>
                <li class="breadcrumb-item">Forms</li>
                <li class="breadcrumb-item active">Metier</li>
            </ol>
        </nav>
    </div>
    <!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Modifier Metier</h5>
                        <!-- General Form Elements -->
                        {{ form_start(form, { attr: { novalidate: 'novalidate' } }) }}

                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-4 col-form-label">Titre</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.titre, { 'attr': { 'class': 'form-control' } }) }}
                            </div>
                            {% if form_errors(form.titre) %}
                                <div class="alert alert-danger">
                                    {{ form_errors(form.titre) }}
                                </div>
                            {% endif %}
                        </div>
                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-4 col-form-label">Image</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.image, { 'attr': { 'class': 'form-control' } }) }}
                            </div>
                            {% if form_errors(form.image) %}
                                <div class="alert alert-danger">
                                    {{ form_errors(form.image) }}
                                </div>
                            {% endif %}
                        </div>
                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-4 col-form-label">Description</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.description, { 'attr': { 'class': 'form-control' } }) }}
                            </div>
                            {% if form_errors(form.description) %}
                                <div class="alert alert-danger">
                                    {{ form_errors(form.description) }}
                                </div>
                            {% endif %}
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-10">
                                <button type="submit" class="col-sm-4 btn btn-primary">Modifier</button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}
