{% extends 'base.html.twig' %}
{% block title %}Nouveau métier
{% endblock %}

{% block body %}
	<main id="main" class="main">

		<div class="pagetitle">
			<h1>Nouveau métier</h1>
			<nav>
				<ol class="breadcrumb">
					<li class="breadcrumb-item">
						<a href="index.html">Home</a>
					</li>
					<li class="breadcrumb-item">Forms</li>
					<li class="breadcrumb-item active">Metier</li>
				</ol>
			</nav>
		</div>

		<section class="section">
			<div class="row">
				<div class="col-lg-6">

					<div class="card">
						<div class="card-body">
							<h5 class="card-title">Ajouter un nouveau métier</h5>
							{% for flash_message in app.flashes('success') %}
								<div class="alert alert-success">{{ flash_message }}</div>
							{% endfor %}

							{{ form_start(M, {attr:{novalidate:'novalidate'}}) }}
							<div class="row mb-3">
								<label for="inputText" class="col-sm-4 col-form-label">titre
								</label>
								<div class="col-sm-10">
									{{ form_widget(M.titre,{'attr':{'class':'form-control'}}) }}
								</div>
								{% if form_errors(M.titre) %}
									<div class="alert alert-danger">
										{{ form_errors(M.titre) }}
									</div>
								{% endif %}
							</div>

							<div class="row mb-3">
								<label for="inputText" class="col-sm-4 col-form-label">description</label>
								<div class="col-sm-10">
									{{ form_widget(M.description,{'attr':{'class':'form-control'}}) }}
								</div>
								{% if form_errors(M.description) %}
									<div class="alert alert-danger">
										{{ form_errors(M.description) }}
									</div>
								{% endif %}
							</div>


							<div class="row mb-3">
								<label for="inputNumber" class="col-sm-4 col-form-label">
									choisir une image</label>
								<div class="col-sm-10">
									{{ form_widget(M.image,{'attr':{'class':'form-control'}}) }}

								</div>
							</div>


							<div class="row mb-3">
								<div class="col-sm-10">
									<button type="submit" class="col-sm-4 btn btn-primary">Ajouter
									</button>
								</div>
							</div>
							{{ form_end(M) }}

						</div>
					</div>
				</div>

			</div>


		</div>
	</section>

</main>{% endblock %}
