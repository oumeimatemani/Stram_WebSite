{% extends 'base.html.twig' %}

{% block title %}modifier clients
{% endblock %}

{% block body %}
	<main id="main" class="main">

		<div class="pagetitle">
			<h1>Formualire de modification Client</h1>
			<nav>
				<ol class="breadcrumb">
					<li class="breadcrumb-item">
						<a href="index.html">Home</a>
					</li>
					<li class="breadcrumb-item">Forms</li>
					<li class="breadcrumb-item active">Clients</li>
				</ol>
			</nav>
		</div>
		<!-- End Page Title -->

		<section class="section">
			<div class="row">
				<div class="col-lg-6">

					<div class="card">
						<div class="card-body">
							<h5 class="card-title">modifier Client</h5>

							<!-- General Form Elements -->
							{{ form_start(C,{attr:{novalidate:'novalidate'}}) }}

							<div class="row mb-3">
								<label for="inputText" class="col-sm-4 col-form-label">Nom
								</label>
								<div class="col-sm-10">
									{{ form_widget(C.nom,{'attr':{'class':'form-control'}}) }}
								</div>
								{% if form_errors(C.nom) %}
									<div class="alert alert-danger">
										{{ form_errors(C.nom) }}
									</div>
								{% endif %}
							</div>


							<div class="row mb-3">
								<label for="inputText" class="col-sm-4 col-form-label">Secteur
								</label>
								<div class="col-sm-10">
									{{ form_widget(C.secteur,{'attr':{'class':'form-control'}}) }}
								</div>
								{% if form_errors(C.secteur) %}
									<div class="alert alert-danger">
										{{ form_errors(C.secteur) }}
									</div>
								{% endif %}
							</div>

							<div class="row mb-3">
								<label for="inputText" class="col-sm-4 col-form-label">service
								</label>
								<div class="col-sm-10">
									{{ form_widget(C.service,{'attr':{'class':'form-control'}}) }}
								</div>
								{% if form_errors(C.service) %}
									<div class="alert alert-danger">
										{{ form_errors(C.service) }}
									</div>
								{% endif %}
							</div>

							<div class="row mb-3">
								<label for="inputNumber" class="col-sm-4 col-form-label">File Upload</label>
								<div class="col-sm-10">
									{{ form_widget(C.logo,{'attr':{'class':'form-control'}}) }}
								</div>
							</div>

							<div class="row mb-3">
								<div class="col-sm-10">
									<button type="submit" class="col-sm-4 btn btn-primary">modifier
									</button>
								</div>
							</div>
							{{ form_end(C) }}

						</div>
					</div>
				</div>

			</div>


		</section>

	</main>

{% endblock %}
