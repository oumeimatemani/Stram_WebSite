{% extends 'base.html.twig' %}
{% block title %}Nouveau Projet
{% endblock %}

{% block body %}
	<main id="main" class="main">
		<div class="pagetitle">
			<h1>
				Nouveau projet</h1>
			<nav>
				<ol class="breadcrumb">
					<li class="breadcrumb-item">
						<a href="/admin">Dashboard</a>
					</li>
					
					<li class="breadcrumb-item active">Projet</li>
				</ol>
			</nav>
		</div>

		<section class="section">
			<div class="row">
	            <div class="col-lg-6">

					<div class="card">
						<div class="card-body">
							<h5 class="card-title">Ajouter un nouveau projet</h5>
							{% for flash_message in app.flashes('success') %}
								<div class="alert alert-success">{{ flash_message }}</div>
							{% endfor %}

							{{ form_start(P, {attr:{novalidate:'novalidate'}}) }}

								<div class="row mb-3">
									<label for="inputText" class="col-sm-4 col-form-label">titre *</label>
									<div class="col-sm-10">
										{{ form_widget(P.titre,{'attr':{'class':'form-control'}}) }}
									</div>
									{% if form_errors(P.titre) %}
										<div class="alert alert-danger">
											{{ form_errors(P.titre) }}
										</div>
									{% endif %}
								</div>


								<div class="row mb-3">
									<label for="inputText" class="col-sm-4 col-form-label">Maître d'ouvrage *</label>
									<div class="col-sm-10">
										{{ form_widget(P.proprietaire,{'attr':{'class':'form-control'}}) }}
									</div>
									{% if form_errors(P.proprietaire) %}
										<div class="alert alert-danger">
											{{ form_errors(P.proprietaire) }}
										</div>
									{% endif %}
								</div>

                                <div class="row mb-3">
									<label class="col-sm-4 col-form-label">Afficher le project dans le site</label>
								</div>

                                <div class="row mb-3">
									<label class="col-sm-4 col-form-label">Afficher dans la page d'accueil</label>
								</div>
                  
							    <div class="row mb-3">
									<label for="inputNumber" class="col-sm-4 col-form-label">
										choisir une image</label>
									<div class="col-sm-10">
										{{ form_widget(P.image,{'attr':{'class':'form-control'}}) }}
									</div>
								</div>

                                <div class="row mb-3">
									<label for="inputText" class="col-sm-4 col-form-label">Description</label>
									<div class="col-sm-10">
										{{ form_widget(P.description,{'attr':{'class':'form-control'}}) }}
									</div>
									{% if form_errors(P.description) %}
										<div class="alert alert-danger">
											{{ form_errors(P.description) }}
										</div>
									{% endif %}
								</div>

                                <div class="row mb-3">
									<label for="inputText" class="col-sm-4 col-form-label">Date de projet</label>
									<div class="col-sm-10">
										{{ form_widget(P.date,{'attr':{'class':'form-control'}}) }}
									</div>
									{% if form_errors(P.date) %}
										<div class="alert alert-danger">
											{{ form_errors(P.date) }}
										</div>
									{% endif %}
								</div>

                               <div class="row mb-3">
									<label for="inputText" class="col-sm-4 col-form-label">Métiers</label>
									<div class="col-sm-10">
										{{ form_widget(P.metiers, {'attr': {'class': 'form-control'}}) }}
									</div>
									
									{% if form_errors(P.metiers) %}
										<div class="alert alert-danger">
											{{ form_errors(P.metiers) }}
										</div>
									{% endif %}
								</div>


                               <div class="row mb-3">
									<label for="inputText" class="col-sm-4 col-form-label">Gallerie</label>
									<div class="col-sm-10">
										{{ form_widget(P.gallerie,{'attr':{'class':'form-control'}}) }}
									</div>
										{% if form_errors(P.gallerie) %}
										<div class="alert alert-danger">
											{{ form_errors(P.gallerie) }}
										</div>
									{% endif %}
								</div>


								<div class="col-lg-8">
									<div class="row mb-3">
										<a href="/projets">
											<button type="submit" class="col-sm-4 btn btn-primary">Ajouter </button>
										</a>
									</div>
								</div>

							{{ form_end(P) }}
						</div>
					</div>
				</div>
           </div>
	    </section>

</main>{% endblock %}
