{% extends 'base.html.twig' %}
{% block title %}ajouter Client
{% endblock %}

{% block body %}
	<main id="main" class="main">

		<div class="pagetitle">
			<h1>
				Nouveau projet</h1>
			<nav>
				<ol class="breadcrumb">
					<li class="breadcrumb-item">
						<a href="index.html">Home</a>
					</li>
					<li class="breadcrumb-item">Forms</li>
					<li class="breadcrumb-item active">Projet</li>
				</ol>
			</nav>
		</div>

		<section class="section">
			<div class="row">
				<div class="col-lg-6">

					<div class="card">
						<div class="card-body"></h5>
						{% for flash_message in app.flashes('success') %}
							<div class="alert alert-success">{{ flash_message }}</div>
						{% endfor %}

						{{ form_start(P, {attr:{novalidate:'novalidate'}}) }}
						<div class="row mb-3">
							<label for="inputText" class="col-sm-4 col-form-label">titre*
							</label>
							<div class="col-sm-10">
								{{ form_widget(P.titre,{'attr':{'class':'form-control'}}) }}
							</div>
							{% if form_errors(P.titre) %}
								<div class="alert alert-danger">
									{{ form_errors(P.titre) }}
								</div>
							{% endif %}
						</div>

						<div class="row mb-3">
							<label for="inputText" class="col-sm-4 col-form-label">Maître d'ouvrage*</label>
							<div class="col-sm-10">
								{{ form_widget(P.proprietaire,{'attr':{'class':'form-control'}}) }}
							</div>
							{% if form_errors(P.proprietaire) %}
								<div class="alert alert-danger">
									{{ form_errors(P.proprietaire) }}
								</div>
							{% endif %}
						</div>


						<div class="row mb-3">
							<label for="inputText" class="col-sm-4 col-form-label">description</label>
							<div class="col-sm-10">
								{{ form_widget(P.description,{'attr':{'class':'form-control'}}) }}
							</div>
							{% if form_errors(P.description) %}
								<div class="alert alert-danger">
									{{ form_errors(P.description) }}
								</div>
							{% endif %}
						</div>


						<div class="row mb-3">
							<label for="inputNumber" class="col-sm-4 col-form-label">
								choisir une image</label>
							<div class="col-sm-10">
								{{ form_widget(P.image,{'attr':{'class':'form-control'}}) }}

							</div>
						</div>


						<div class="row mb-3">
							<label for="inputText" class="col-sm-4 col-form-label">Métiers</label>
							<div class="col-sm-10">
								{{ form_widget(P.metiers, {'attr': {'class': 'form-control'}}) }}
							</div>
						</div>

						<div class="row mb-3">
							<label for="inputText" class="col-sm-4 col-form-label">Date projet</label>
							<div class="col-sm-10">
								{{ form_widget(P.date, {'attr': {'class': 'datepicker'}}) }}
							</div>
						</div>

						<div class="row mb-3">
							<label for="inputNumber" class="col-sm-4 col-form-label">
								Choisir les images de la galerie
							</label>
							<div class="col-sm-10">
								{{ form_widget(P.gallerie, {'attr': {'class': 'form-control', 'multiple': 'multiple'}}) }}
							</div>
						</div>

						{{ form_end(P) }}

					</div>

				</div>
				<h5 class="card-title">Ajouter un nouveau Projet

					<div class="row mb-3">
						<div class="col-sm-10">
							<button type="submit" class="col-sm-4 btn btn-primary">Ajouter
							</button>
						</div>
					</div>
				</div>

			</div>


		</div>
	</section>

</main>{% endblock %}
